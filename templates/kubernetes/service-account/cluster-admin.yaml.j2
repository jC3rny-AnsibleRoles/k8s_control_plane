apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ ansible_facts_env_user }}
  namespace: kube-system

---

apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: cluster-admin-{{ ansible_facts_env_user }}
subjects:
- kind: ServiceAccount
  name: {{ ansible_facts_env_user }}
  namespace: kube-system
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
